# ============================================
# Example Environment File for Backend
# Place this file in the backend folder as `.env`
# ============================================

# -----------------------------
# Server Configuration
# -----------------------------
PORT=8000

# -----------------------------
# Database Configuration
# -----------------------------
# Connection string (used by ORM or backend)
DATABASE_URL=postgresql://username:password@localhost:5432/solana_carbon_wallet

# -----------------------------
# Solana RPC Configuration
# -----------------------------
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# -----------------------------
# Platform Settings
# -----------------------------
PLATFORM_FEE_PERCENTAGE=5

# -----------------------------
# PostgreSQL (manual connection)
# -----------------------------
DB_CLIENT=pg
DB_HOST=localhost
DB_PORT=5432
DB_USER=username
DB_PASSWORD=password
DB_NAME=solana_carbon_wallet
